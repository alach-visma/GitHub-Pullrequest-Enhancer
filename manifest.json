{
  "manifest_version": 3,
  "name": "GitHub PR Table Enhancer",
  "version": "1.0.0",
  "description": "Enhances GitHub Pull Request table view with improved column layout",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pulls"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}